import java.util.*;
public class Pattern7 {
    public static void main(String[] args) 
    {
        System.out.println("Enter a no.");
        Scanner scn = new Scanner(System.in);
        int n = scn.nextInt();
        
        int sp = 0;
        for(int i = 1;i<=n;i++)
        {
            for(int j = 1;j<=sp;j++)
            {
                System.out.print("  ");
            }
            System.out.println("* ");

            sp++;
        }

    }
}
